<%
  def link_to(name, url)
    return "<a href='#{url}'>#{name}</a>"
  end
%>

<html>
  <body>
    <h1>You're using a layout</h1>
    <p>
      <h3> I'm a header</h3>
      <p>Put things in the header</p>
      <a href='me.html'>Me</a>
      <a href='http://www.google.com'>This is a link to Google</a>
      <a href='http://www.facebook.com'>This is a link to Facebook</a>
      <%= link_to('This is a link to Amazon', 'http://www.amazon.com') %>

    </p>
    <hr />
    <div>
      <%= yield %>
    </div>
    <hr />
    <div>
      <h3> I'm a footer</h3>
      <p>Put things in the footer</p>
      <a href='http://www.zaboom.co.za'>This is a link to Zaboom!</a>
      <%= link_to('This is a link to Nipper Films', 'http://www.nipperfilms.co.uk')%>    
    </div>
  </body>
</html>